<h1>Vocabulary: {{this.model.name}}</h1>
<h2>Download Jobs</h2>
<table class='table'>
  <thead>
    <tr>
      <th>Date</th>
      <th>Status</th>
      <th>Start Dataset Generation</th>
      <th>Start Unification</th>
    </tr>
  </thead>
  <tbody>
    {{#each this.jobs as |job|}}
      <tr>
        <td>
          {{format-date job.created "dd/MM/yyyy 'at' HH:mm"}}
        </td>
        <td>
          <JobStatus @job={{job}}/>
        </td>
        <td>
          <BsButton
            @onClick={{perform this.createAndRunDatasetGenerationJob job.results}}
            @outline={{true}}
            disabled={{not job.succeeded}}
          >
            ↩️
          </BsButton>
        </td>
        <td>
          <BsButton
            @onClick={{perform this.createAndRunUnifyVocabJob job.results}}
            @outline={{true}}
            disabled={{not job.succeeded}}
          >
            ↩️
          </BsButton>
        </td>
      </tr>
    {{/each}}

  </tbody>
</table>